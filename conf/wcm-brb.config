process.queue = params.queue

process {
  executor = 'slurm'  
  withLabel: med_mem {
	time = 8.h
	cpus = 8
	memory = 32.GB
  }
  
  withLabel: big_mem {
	time = 18.h
	cpus = 8
	memory = 64.GB
  }
  
  withLabel: small_mem {
    time = 8.h
	cpus = 1
	memory = 16.GB
    
  }
  
  withLabel: massive_mem {
    time = 18.h
    cpus = 16
    memory = 128.GB
  }
  
  withLabel: largeStore {
    time = 18.h
	cpus = 1
	memory = 100.GB
  }
}

executor {
  queueSize = 20 
}

